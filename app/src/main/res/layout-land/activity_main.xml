<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin"

    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/main_photo"
        android:layout_width="@dimen/main_photo_landscape_width"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/main_photo_descr"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/send_mail"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/layout_margin"
        android:layout_toEndOf="@id/main_photo">

        <RelativeLayout
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/description_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@color/text_view_background"
                android:padding="@dimen/common_padding"
                android:paddingEnd="@dimen/common_padding"
                android:text="@string/description_general_text"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/description_modular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_general"
                android:layout_alignTop="@id/description_modular"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@color/text_view_background"
                android:padding="@dimen/common_padding"
                android:paddingStart="@dimen/description_left_padding"
                android:paddingEnd="@dimen/common_padding"
                android:text="@string/description_modular_text"
                android:textSize="@dimen/common_text_size" />

            <ImageView
                android:layout_width="@dimen/description_logo"
                android:layout_height="@dimen/description_logo"
                android:layout_alignStart="@id/description_modular"
                android:layout_alignTop="@id/description_modular"
                android:layout_alignBottom="@id/description_modular"
                android:contentDescription="@string/content_descr_worked_logo"
                android:scaleType="fitXY"
                android:src="@drawable/modular_mining_logo" />

            <TextView
                android:id="@+id/description_tinkoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_modular"
                android:background="@color/text_view_background"
                android:padding="@dimen/common_padding"
                android:paddingStart="@dimen/description_left_padding"
                android:paddingEnd="@dimen/common_padding"
                android:text="@string/description_tinkoff_text"
                android:textSize="@dimen/common_text_size" />

            <ImageView
                android:layout_width="@dimen/description_logo"
                android:layout_height="@dimen/description_logo"
                android:layout_alignStart="@id/description_tinkoff"
                android:layout_alignTop="@id/description_tinkoff"
                android:layout_alignBottom="@id/description_tinkoff"
                android:contentDescription="@string/content_descr_worked_logo"
                android:scaleType="fitXY"
                android:src="@drawable/tinkoff_logo" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/main_photo">

        <Button
            android:id="@+id/social_facebook"
            android:layout_width="@dimen/common_social_btn"
            android:layout_height="@dimen/common_social_btn"
            android:layout_alignTop="@+id/social_instagram"
            android:layout_toStartOf="@+id/social_instagram" />

        <Button
            android:id="@+id/social_instagram"
            android:layout_width="@dimen/common_social_btn"
            android:layout_height="@dimen/common_social_btn"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/social_button_margin"
            android:layout_marginTop="@dimen/social_button_margin"
            android:layout_marginEnd="@dimen/social_button_margin"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/social_telegram"
            android:layout_width="@dimen/common_social_btn"
            android:layout_height="@dimen/common_social_btn"
            android:layout_alignTop="@+id/social_instagram"
            android:layout_toEndOf="@+id/social_instagram" />
    </RelativeLayout>

    <EditText
        android:id="@+id/send_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_bar"
        android:layout_alignStart="@id/button_bar"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@drawable/shape_border_rectangle"
        android:hint="@string/contact_me"
        android:imeOptions="actionSend"
        android:inputType="textAutoCorrect"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        android:textColorHint="@color/colorAccent" />

</RelativeLayout>
